<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <div class="row">
        <div class="col-md-2 img-container" style="max-height:150px; "><img src='https://fbcdn-sphotos-g-a.akamaihd.net/hphotos-ak-xpf1/v/t1.0-9/11025688_878737466327_2846707288741481944_n.jpg?oh=0614e713f05e48a9408d578c03513a59&oe=557AB957&__gda__=1434298812_9753183d69564b54613596f157f6b535' class="img-responsive img-rounded"></div>

        <div class="col-md-10">
          <h1>Remember the Goat Milk</h1>
          <p><%= link_to "New Task", new_to_do_path, class: "btn btn-default" %></p>
        </div>
      </div>
      <br>
        <div class="panel panel-default">
        <table class="table table-bordered table-striped" id="sortable">
          <colgroup>
            <col class="col-xs-1">
            <col class="col-xs-7">
            <col class="col-xs-2">
            <col class="col-xs-2">
          </colgroup>
          <thead>
            <div class="row">
              <tr>
                <th>Complete?</th>
                <th>Task</th>
                <th>Due On</th>
                <th>Options</th>
              </tr>
            </div>
          </thead>
          <tbody>
            <% @todos.each do |t| %>
            <div class="row">
              <tr data-item-id=<%= "#{t.id}" %> class="item">
                <td class="text-center"><%= form_for t, :remote => true do |f| %>
                  <%= f.check_box :complete, :class => 'submittable' %>
                  <% end %>
                </td>
                <td><%= t.content %></td>
                <td><%= t.due_on %></td>
                <td><%= link_to 'Edit', edit_to_do_path(t), class: "btn btn-default pull-center" %>
                  <%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default pull-center" %>
                  <div class="btn btn-default pull-center">
                  <span class="glyphicon glyphicon-sort pull-right" aria-hidden="true"></span>
                </div>
                </td>
              </tr>
            </div>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
